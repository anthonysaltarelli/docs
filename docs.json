            "group": "Getting Started",
            "pages": ["index", "guides/introduction", "guides/setup-overview"]
          },
          {
            "group": "Documentation",
            "pages": [
              {
                "group": "Payment Settings",
                "expanded": true,
                "pages": [
                  "payment-settings/index",
                  "payment-settings/stripe-connect",
                  "payment-settings/payment-configurations",
                  "payment-settings/invoices-and-balances",
                  "payment-settings/coupons",
                  "payment-settings/refunds"
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://firstrespondershub.com/program-dashboard"
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
