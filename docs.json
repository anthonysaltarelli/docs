{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "First Responders Hub Docs",
  "colors": {
    "primary": "#E63946",
    "light": "#EF6B78",
    "dark": "#1D3557"
  },
  "favicon": "/favicon.svg",
  "icons": { "library": "lucide" },
  "navigation": {
    "tabs": [
      {
